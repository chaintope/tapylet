{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "types": ["jest", "node"],
    "allowJs": true,
    "noImplicitAny": false
  },
  "include": ["test/**/*.test.ts", "src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules"]
}
